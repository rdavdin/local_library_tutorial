extends layout 
block content 
    h1 #{title}: #{book.title} 
    if book_instances.length > 0
        p #[strong Delete the following book instances before attempting to delete this book.]
        div(style='margin-left:20px;margin-top:20px') 
            h4 Book Instances 
            each instance in book_instances 
                hr
                p #[strong Imprint:] #{instance.imprint}
                p #[strong Id:] 
                    a(href=instance.url) #{instance._id}
    else 
        p #[strong Do you really want to delete this book?]
        form(method="POST" action="")
            div.form-group
                input#bookid.form-control(type="hidden" value=book._id name="bookid" required="true")
                button.btn.btn-primary(type='submit') Delete 
                
                
